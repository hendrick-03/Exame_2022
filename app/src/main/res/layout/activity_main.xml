<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/nome_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/nome_ed"
        android:layout_marginTop="70dp"
        android:layout_margin="20sp"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/idade_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/idade_ed"
        android:layout_marginTop="70dp"
        android:layout_margin="20sp"
        android:inputType="number" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_margin="20sp"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/masculino_rad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masculino" />

        <RadioButton
            android:id="@+id/femenino_rad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Femenino" />
    </RadioGroup>

    <Spinner
        android:id="@+id/provinvia_spi"
        android:layout_width="match_parent"
        android:layout_margin="55dp"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/gravidade_spi"
        android:layout_width="match_parent"
        android:layout_margin="55dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/gravarbtn"
            android:layout_width="wrap_content"
            android:layout_margin="55dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gravar" />

        <Button
            android:id="@+id/listar_btn"
            android:layout_width="wrap_content"
            android:layout_margin="55dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Listar" />
    </LinearLayout>

</LinearLayout>